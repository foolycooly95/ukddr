---
import { ClientRouter } from "astro:transitions";
import { Icon } from "astro-icon/components";

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/webp" href="/favicon.webp" />
        <meta name="generator" content={Astro.generator} />
        <title>UK DDR</title>
        <ClientRouter />
    </head>
    <body class="bg-gray-900 text-white">
        <div class="flex flex-col container mx-auto p-4 gap-8">
            <div class="text-center lg:text-left">
                <a class="text-5xl font-bold" href="/"> UK DDR </a>
            </div>
            <div><slot /></div>
            <div
                class="text-gray-500 px-4 flex flex-row gap-2 items-center justify-center lg:justify-end"
            >
                <Icon name="mdi:github" /><span>GitHub</span>
            </div>
        </div>
    </body>
</html>
